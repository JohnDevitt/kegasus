<div class="container">
  <div class="panel panel-default">
    <div class="panel-body">
      <%= form_for @filterrific do |f| %>

        <div class = "row">
          <div class = "form-group col-md-3">
            <%= f.text_field(
              :search_query,
              class: 'form-control filterrific-periodically-observed text-center',
              placeholder: 'Search'
            ) %>
          </div>

          <div class = "form-group col-md-3">
            <%= f.text_field(
              :max_price,
              class: 'form-control filterrific-periodically-observed text-center',
              placeholder: 'Max Price'
            ) %>
          </div>

          <div class = "form-group col-md-3">
            <%= f.select(
              :filtered_by,
              @filterrific.select_options[:filtered_by],
              {},
              {class: "selectpicker text-center", style: "data-width: 100%"}
            ) %>
          </div>

          <div class = "form-group col-md-3">
            <%= f.select(
              :sorted_by,
              @filterrific.select_options[:sorted_by],
              {},
              {class: "selectpicker text-center"} 
            ) %>
          </div>

          </div>

          <div class = "row">

<%# add an automated spinner to your form when the list is refreshed %>
          <div class ="form-group col-md-11">
          <%= render_filterrific_spinner %>
        </div>

          <div class ="form-group col-md-1">
            <%= link_to('Reset filters',reset_filterrific_listings_path, method: :get, class: "btn btn-danger pull-right") %>
          </div>

          </div>
      <% end %>
    </div>
  </div>
</div>

<%= render(
    partial: 'listings/list',
    locals: { listings: @listings }
  ) %>

