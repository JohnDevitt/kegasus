<script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>

<p id="notice"><%= notice %></p>


<div class = "container">
  
  <div class="panel panel-default">
  <div class="panel-heading"><h3 class="panel-title">Basket</h3></div>

  <div class="panel-body">
    <div class = "table-reponsive">
        <table class="table">
            <thead>
              <tr>
                <th>Address</th>
                <th>Latitude</th>
                <th>Longitude</th>
              </tr>
            </thead>

            <tbody>
              <% @orders.each do |order| %>
                <tr> 
                  <td><p><%= order.address %></p></td>
                  <td><p><%= order.latitude %></p></td>
                  <td><p><%= order.longitude %></p></td>
                  <td><%= link_to 'Fulfil', {:controller => "orders", :action => "fulfil_order", :id => order.id}, {:class => "btn btn-primary"}%></td>
                </tr>
              <% end %>
            </tbody>
          </table>

        </br>
          <div id="map" style='width: 100%; height: 400px;'></div>

        </div>
      </div>
    </div>
  </br>
</div>
</div>

<script>
handler = Gmaps.build('Google');
handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
    
  var jsonData = <%=raw @hash.to_json %>;

  for(var i = 0; i < jsonData.length; i++) {
    markers = handler.addMarkers(jsonData[i]);
    handler.bounds.extendWith(markers);
    handler.fitMapToBounds();
  }

  for(var i = 0; i < jsonData.length; i++) {
    handler.addPolyline(jsonData[i]); // and not addPolylines
    handler.bounds.extend(jsonData[i]);
    handler.bounds.extend(jsonData[i][ jsonData.length - 1]);
    handler.fitMapToBounds();
  }
});
</script>